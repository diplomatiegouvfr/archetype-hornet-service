#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>

<!-- 
Configuration Spring pour la couche metier.
-->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

	<!-- ========================= COUCHE BUSINESS ========================= -->

    
	<bean id="utilisateurService" class="${package}.business.service.UtilisateurServiceImpl">
		<constructor-arg ref="utilisateurDAO" index="0" />
	</bean>
	
	<bean id="roleService" class="${package}.business.service.RoleServiceImpl">
		<constructor-arg ref="roleDAO" index="0" />
	</bean>
	
</beans>
