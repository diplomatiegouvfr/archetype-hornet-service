#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
 	http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-4.1.xsd">
    
    
	<!-- Import des fichiers de configuration spring -->
	<import resource="classpath:/spring-appContext-common.xml" />
	<import resource="classpath:/spring-appContext-aopMetrologie.xml" />
	<import resource="classpath:/spring-appContext-mail.xml" />
	
	<context:property-placeholder location="classpath:token.properties" order="1" ignore-unresolvable="true"/>
	
	<bean id="keyProvider" class="${package}.web.security.KeyProvider">
		<constructor-arg value="${token.path}"></constructor-arg>
	</bean>

	<context:component-scan base-package="${package}.export, ${package}.web.security" />

</beans>