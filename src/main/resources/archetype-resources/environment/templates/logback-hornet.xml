<configuration scan="true">

	<property name="repertoire" value="${symbol_dollar}{symbol_pound}{LOGBACK_DIR_PREFIX_PATTERN}${symbol_dollar}{symbol_pound}{CURRENT_INSTANCE}${symbol_dollar}{symbol_pound}{LOGBACK_DIR_SUFFIX_PATTERN}" />
	<property name="nomFichier" value="${symbol_dollar}{symbol_pound}{LOGBACK_LOG_FILENAME}" />
	<property name="nomFichierRolling" value="${symbol_dollar}{symbol_pound}{LOGBACK_LOG_FILENAME_ROLLING_PATTERN}" />

	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<file>${symbol_dollar}{repertoire}/${symbol_dollar}{nomFichier}</file>
		<append>true</append>
		<encoder>		
			<pattern>%date{ISO8601}|%t|%X{tid:-NO_TID}|%X{user:-NO_USER}|%p|%c|%m %ex{full}%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${symbol_dollar}{repertoire}/${symbol_dollar}{nomFichierRolling}</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
	</appender>

	<root level="INFO">
		<appender-ref ref="FILE" />
	</root>

	<!-- definition des logs applicatifs -->
	<logger name="${package}" level="INFO" />

	<!-- definition des logs HORNET -->
	<logger name="hornet" level="INFO" />

	<!-- definition des logs SPRING -->
	<logger name="org.springframework" level="ERROR" />

	<!-- definition des logs IBATIS et JDBC -->
	<logger name="java.sql.Statement" level="ERROR" />
	<logger name="java.sql.ResultSet" level="ERROR" />
	<logger name="java.sql.Connection" level="ERROR" />
	<logger name="java.sql.PreparedStatement" level="ERROR" />
	
	<!-- definition des logs ehcache -->
	<logger name="net.sf.ehcache" level="ERROR" />
</configuration>
