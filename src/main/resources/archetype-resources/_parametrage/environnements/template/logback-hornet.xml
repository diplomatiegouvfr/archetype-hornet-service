#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>

<configuration scan="true">

	<property name="repertoire" value="/var/log/tomcat8/${artifactId}" />
	<property name="nomFichier" value="${artifactId}.log" />
	<property name="nomFichierRolling" value="${artifactId}-%d{yyyy-MM-dd}.log" />


	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${symbol_dollar}{repertoire}/${symbol_dollar}{nomFichier}</file>
		<append>true</append>
		<encoder>
			<pattern>%d{yyyy:MM:dd:HH:mm:ss,SSS}|%p|%X{login}|%t|%c|%m%n</pattern>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>${symbol_dollar}{repertoire}/${symbol_dollar}{nomFichierRolling}</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
	</appender>

	<root level="INFO">
		<appender-ref ref="FILE" />
	</root>

	<!-- definition des logs applicatifs -->
	<logger name="fr.gouv.diplomatie" level="INFO" />

	<!-- definition des logs HORNET -->
	<logger name="hornet" level="INFO" />

	<!-- definition des logs SPRING -->
	<logger name="org.springframework" level="INFO" />

	<!-- definition des logs IBATIS et JDBC -->
	<logger name="java.sql.Statement" level="INFO" />
	<logger name="java.sql.ResultSet" level="INFO" />
	<logger name="java.sql.Connection" level="INFO" />
	<logger name="java.sql.PreparedStatement" level="INFO" />
	
</configuration>
